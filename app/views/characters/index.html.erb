<ul>
<% @characters.each do |character| %>
	<li class="character">
		<div class="character-inner">
			<div class="column-1">
				<div class="img">
					<%= image_tag "#{ character.name.gsub(/\p{^Alnum}/, '').downcase }.png" %>
				</div>
				<h3><%= character.name %></h3>
				<p class="bio"><%= character.summary.split(".")[0] %>.<p>
				<p class="details">A Number of References over a Number of Episodes<p>
			</div>
			<div class="column-2">
				<p class="references">
					<% character.references.each do |ref| %>
					 &#9642; <span><%= ref.line %></span>
					<% end %>
				</p>
				<ul class="categories">
					<% category_list(character).each do |cat| %>
					<li><%= cat %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</li>
<% end %>
</ul>